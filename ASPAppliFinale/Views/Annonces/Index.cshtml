@model IEnumerable<ASPAppliFinale.Models.Annonce>

@{
    ViewBag.Title = "Annonces";
}

<h2>Annonces</h2>

<p>
    @Html.ActionLink("Ajouter une nouvelle", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.Label("Modele")
        </th>
        <th>
            @Html.Label("Proprio")
        </th>
        <th>
            @Html.Label("Annee")
        </th>
        <th>
            @Html.Label("kilometrage")
        </th>
        <th>
            @Html.Label("Couleur")
        </th>
        <th>
            @Html.Label("Prix")
        </th>
        <th>
            @Html.Label("Statut")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Modele.MNom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proprio.PNom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AAnnee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AKilometrage)
                <label>Km</label>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ACouleur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.APrix)
                <label>€</label>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AStatut)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDAnnonce }) |
                @Html.ActionLink("Vendu", "Vendu", new { id = item.IDAnnonce }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDAnnonce })
            </td>
        </tr>
    }

</table>
